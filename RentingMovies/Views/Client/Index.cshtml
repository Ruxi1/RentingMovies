@model IEnumerable<RentingMovies.Models.DBObjects.ClientModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Clients</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


    <form asp-controller="Client" asp-action="SearchClient" method="get">
    <p>
        Email: <input type="text" name="email"/>
        <input type="submit" value="Search"/>
    </p>
    </form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdClient }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdClient}) |
                 @if(User.IsInRole("Admin"))
                {
                     @Html.ActionLink("Delete", "Delete", new { id=item.IdClient })    
                } 
                |
                @Html.ActionLink("RentingsByClient", "RentingsByClient", "Renting", new { idClient=item.IdClient})
            </td>
        </tr>
}
    </tbody>
</table>
